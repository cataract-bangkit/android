<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:padding="32dp"
    tools:context=".dashboard.ResultDetectionFragment">

    <TextView
        style="@style/Heading"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:text="@string/result_detection" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/preview_image"
        android:contentDescription="@string/img_preview" />

    <TextView
        style="@style/Heading"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:text="@string/result_detection"/>

    <TextView
        android:id="@+id/result"
        style="@style/Heading"
        android:textSize="32sp"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        android:text="@string/result"/>

    <TextView
        android:id="@+id/persen"
        style="@style/TextRegular"
        android:text="@string/result_desc"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>